<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/tool_month_with"
        />

    <TextView
        android:id="@+id/current_age_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_month_with"
        android:text="current age"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/current_age_text"
        android:layout_alignRight="@id/current_age_text"
        android:hint="age"
        android:textColor="@android:color/black"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tool_month_with"
        android:id="@+id/edit_current" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_current"
        android:layout_below="@id/current_age_text"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/retire_age_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retirement age"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/view_current"
         />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/retire_age_text"
        android:layout_alignRight="@id/retire_age_text"
        android:layout_below="@id/view_current"
        android:hint="age"
        android:textColor="@android:color/black"
        android:padding="20dp"
        android:id="@+id/edit_retire" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_retire"
        android:layout_below="@id/retire_age_text"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/life_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_retire"
        android:layout_margin="5dp"
        android:text="Life expectancy"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/life_text"
        android:layout_alignRight="@id/life_text"
        android:layout_below="@id/view_retire"
        android:hint="age"
        android:textColor="@android:color/black"
        android:padding="20dp"
        android:id="@+id/edit_life" />


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_life"
        android:layout_below="@id/life_text"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/lumpsumWith_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lumpsum Withdrawal\n(retirement)"
        android:textSize="20sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_below="@id/view_life"
        />

    <EditText
        android:id="@+id/edit_lump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="2000"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/view_life"
       android:layout_alignRight="@id/lumpsumWith_text"
        android:layout_alignEnd="@id/lumpsumWith_text"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_lump"
        android:layout_below="@id/lumpsumWith_text"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/amount_deposit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_lump"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="Amount Deposited"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_alignEnd="@id/amount_deposit_text"
        android:layout_alignRight="@id/amount_deposit_text"
        android:layout_below="@id/lumpsumWith_text"
        android:hint="1000"
        android:id="@+id/edit_amount" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_amount"
        android:layout_below="@id/amount_deposit_text"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/amountHeirs_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_amount"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="Amount bequeath to heirs"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/edit_amount_heir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_alignEnd="@id/amount_deposit_text"
        android:layout_alignRight="@id/amountHeirs_text"
        android:layout_below="@id/amount_deposit_text"
        android:hint="7000" />
     />
    <TextView
        android:id="@+id/compounded_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amountHeirs_text"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="Compounded times"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/edit_compounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_alignEnd="@id/compounded_text"
        android:layout_alignRight="@id/compounded_text"
        android:layout_below="@id/amountHeirs_text"
        android:hint="2" />




        <Button
            android:id="@+id/calculate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/primary_light"
            android:text="Calculate" />





</RelativeLayout>