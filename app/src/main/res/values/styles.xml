<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/heading</item>
        <item name="colorPrimaryDark">@color/accent_material_light</item>
        <item name="colorAccent">@color/float_message</item>
        <item name="android:colorControlNormal">@color/icons</item>
        <item name="android:textColorPrimary">@color/icons</item> // I don't want to set this, changes everywhere.
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
