<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/yearsRetire_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_linear"
        android:text="lifeSpan after Retirement"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/yearsRetire_text"
        android:layout_alignRight="@id/yearsRetire_text"
        android:layout_below="@id/button_linear"
        android:hint="15"
        android:id="@+id/editText7" />

    <TextView
        android:id="@+id/lumpsumDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lump Sum Required"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/yearsRetire_text"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="300000"
        android:layout_below="@+id/yearsRetire_text"
        android:layout_alignEnd="@id/lumpsumDep"
        android:layout_alignRight="@id/lumpsumDep"
        android:id="@+id/editText8" />

    <TextView
        android:id="@+id/QuaterlytWithAtPens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lumpsumDep"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Quartely Withdrawal(Retirement)"
        android:textSize="20sp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/QuaterlytWithAtPens"
        android:layout_alignRight="@id/QuaterlytWithAtPens"
        android:layout_below="@id/lumpsumDep"
        android:hint="50000" />




</RelativeLayout>