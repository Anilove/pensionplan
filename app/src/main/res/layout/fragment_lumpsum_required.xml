<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/current_age_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="current age"
        android:layout_margin="5dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/current_age_text"
        android:layout_alignRight="@id/current_age_text"
        android:hint="age" />

    <TextView
        android:id="@+id/retire_age_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/current_age_text"
        android:text="Retirement age"
        android:textSize="20sp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/retire_age_text"
        android:layout_alignRight="@id/retire_age_text"
        android:layout_below="@id/current_age_text"
        android:hint="age" />

    <TextView
        android:id="@+id/life_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/retire_age_text"
        android:text="Life expectancy"
        android:layout_margin="5dp"
        android:textSize="20sp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/life_text"
        android:layout_alignRight="@id/life_text"
        android:layout_below="@id/retire_age_text"
        android:hint="age" />

    <TextView
        android:id="@+id/interest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/life_text"
        android:layout_margin="5dp"
        android:text="LongTerm Interest(retirement)"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/interest_text"
        android:layout_alignRight="@id/interest_text"
        android:layout_below="@id/life_text"
        android:hint="15%" />

    <TextView
        android:id="@+id/inflation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long term expected inflation"
        android:textSize="20sp"
        android:layout_below="@id/interest_text"
        android:layout_margin="5dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/inflation_text"
        android:layout_alignRight="@id/inflation_text"
        android:layout_below="@id/interest_text"
        android:hint="12%"
        android:id="@+id/editText5" />

    <TextView
        android:id="@+id/monthlyWith_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/inflation_text"
        android:text="Monthly Withdrawal(Retirement)"
        android:textSize="20sp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/monthlyWith_text"
        android:layout_alignRight="@id/monthlyWith_text"
        android:layout_below="@id/inflation_text"
        android:hint="2000"
        android:id="@+id/editText6" />

    <LinearLayout
        android:id="@+id/button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthlyWith_text"
        android:weightSum="2"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calculate_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LumpBase_text"
            android:layout_weight="1"
           android:layout_margin="10dp"
            android:background="@color/primary_light"
            android:text="Calculate" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/primary_light"
            android:text="Details"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/yearsRetire_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_linear"
        android:text="lifeSpan after Retirement"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/yearsRetire_text"
        android:layout_alignRight="@id/yearsRetire_text"
        android:layout_below="@id/button_linear"
        android:hint="15"
        android:id="@+id/editText7" />

    <TextView
        android:id="@+id/lumpsumDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lump Sum Required"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/yearsRetire_text"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="300"
        android:layout_below="@+id/yearsRetire_text"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:id="@+id/editText8" />

    <TextView
        android:id="@+id/QuaterlytWithAtPens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lumpsumDep"
        android:layout_margin="5dp"
        android:text="Quartely Withdrawal(Retirement)"
        android:textSize="20sp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/QuaterlytWithAtPens"
        android:layout_alignRight="@id/QuaterlytWithAtPens"
        android:layout_below="@id/lumpsumDep"
        android:hint="50000" />







</RelativeLayout>
